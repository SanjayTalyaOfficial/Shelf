<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d1d1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_frame">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TableRow
                    android:layout_marginBottom="20dp">

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view1"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        card_view:cardCornerRadius="10dp"
                        >
                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/h1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="180dp"
                                android:padding="0dp"
                                android:src="@drawable/offers1"
                                android:id="@+id/image"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="180dp"
                                    android:padding="0dp"
                                    android:src="@drawable/offers2"
                                    android:id="@+id/image21"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="180dp"
                                    android:padding="0dp"
                                    android:src="@drawable/offers3"
                                    android:id="@+id/image31"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="180dp"
                                    android:padding="0dp"
                                    android:src="@drawable/offers1"
                                    android:id="@+id/image41"/>



                        </LinearLayout>
                        </HorizontalScrollView>
                    </android.support.v7.widget.CardView>

                </TableRow>
                <TableRow
                    android:layout_marginBottom="20dp">

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view2"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        card_view:cardCornerRadius="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Fruits And Vegetables"
                            android:layout_gravity="center"
                            android:textSize="30sp"
                            android:textColor="#000000"
                            android:id="@+id/text2"
                            />

                    </android.support.v7.widget.CardView>

                </TableRow>
                <TableRow
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view44"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        >

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="0dp"
                            android:src="@drawable/dry"
                            android:id="@+id/image3312"/>

                    </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view45"
                            android:layout_width="170dp"
                            android:layout_height="200dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="0dp"
                                android:src="@drawable/fruits"
                                android:id="@+id/image3331"/>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view3"
                            android:layout_width="170dp"
                            android:layout_height="200dp"
                            >

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="0dp"
                                android:src="@drawable/veg"
                                android:id="@+id/image331"/>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view4"
                            android:layout_width="170dp"
                            android:layout_height="200dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="0dp"
                                android:src="@drawable/special"
                                android:id="@+id/image333"/>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_marginTop="15dp">

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view221"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        card_view:cardCornerRadius="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Beverages"
                            android:layout_gravity="center"
                            android:textSize="30sp"
                            android:textColor="#000000"
                            android:id="@+id/text221"
                            />

                    </android.support.v7.widget.CardView>

                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view444"
                            android:layout_width="170dp"
                            android:layout_height="200dp"
                            >

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="0dp"
                                android:src="@drawable/drinks1"
                                android:id="@+id/image33122"/>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view455"
                            android:layout_width="170dp"
                            android:layout_height="200dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="0dp"
                                android:src="@drawable/drinks2"
                                android:id="@+id/image33311"/>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_marginBottom="20dp">

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view2223"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        card_view:cardCornerRadius="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Stationary"
                            android:layout_gravity="center"
                            android:textSize="30sp"
                            android:textColor="#000000"
                            android:id="@+id/text223"
                            />

                    </android.support.v7.widget.CardView>

                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view447"
                            android:layout_width="170dp"
                            android:layout_height="200dp"
                            >

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="0dp"
                                android:src="@drawable/station1"
                                android:id="@+id/image33127"/>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view459"
                            android:layout_width="170dp"
                            android:layout_height="200dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="0dp"
                                android:src="@drawable/station2"
                                android:id="@+id/image33314"/>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view4549"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:src="@drawable/deals"
                            android:id="@+id/image333144"/>

                    </android.support.v7.widget.CardView>

                </TableRow>

            </TableLayout>
        </ScrollView>

    </FrameLayout>


</RelativeLayout>